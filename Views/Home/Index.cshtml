 <!-- slide -->
<div id="carouselExampleIndicators" class="carousel slide mt-1" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        @for(var i = 0 ; i < 1 ;  i++ )
        {
            
            <div class="carousel-item active">
            <img class="d-block w-100" src="/storage/@banner[i].Photo" alt="First slide">
            </div>
           
        }
        @for(var i = 1 ; i < 2 ;  i++ )
        {
         <div class="carousel-item">
            <img class="d-block w-100" src="/storage/@banner[i].Photo" alt="Second slide">
             </div>
        }
        @for(var i = 2 ; i < 3 ;  i++ )
        {
       
            <div class="carousel-item">
            <img class="d-block w-100" src="/storage/@banner[i].Photo" alt="Third slide">
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    <div class="btn-shop">
        <a asp-controller="Shop" asp-action="Index" id="btn-shop" >SHOP NOW</a>

    </div>
</div>

