@model IEnumerable<comestic_csharp.Models.Product>
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 col-12">
                <div class="single-product">
                    <div class="product-img">
                        <a asp-action="Details" asp-route-id="@item.Id" asp-controller="Shop">
                            <img class="default-img" src="/frontend/product_list/storage/photo/sanpham/@Html.DisplayFor(modelItem => item.Photo1)" alt="#">
                                <img class="hover-img" src="/frontend/product_list/storage/photo/sanpham/@Html.DisplayFor(modelItem => item.Photo1)" alt="#">
                                    <span class="price-dec">10 % Off</span>
                                        </a>
                                                        <div class="button-head">
                                                            <div class="product-action">
                                                                <a data-toggle="modal" data-target="#" title="Quick View" href="#"><i class=" ti-eye"></i><span>Quick Shop</span></a>
                                                                <a title="Wishlist" href="#" class="wishlist" data-id="0"><i class=" ti-heart "></i><span>Add to Wishlist</span></a>
                                                            </div>
                                                            <div class="product-action-2">
                                                                <a title="Add to cart" href="#">Add to cart</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="product-content">
                                                        <h3><a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a></h3>
                                                        <span>@Html.DisplayFor(modelItem => item.Price)</span>
                                                        <del style="padding-left:4%;">@Html.DisplayFor(modelItem => item.Price)</del>
                                                    </div>
                                                </div>
                                            </div>
        }
            </div>