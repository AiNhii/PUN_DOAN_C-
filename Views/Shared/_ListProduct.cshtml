@using comestic_csharp.Areas.Identity.Data
@model IEnumerable<comestic_csharp.Models.Product>
@{
	ShopDbContext context = new ShopDbContext();
	var OnTop = context.Products.Where(p => p.CatId==1).Take(3);
        var BestSeller = context.Products.Where(p => p.CatId==2).Take(3);
        var TopReview = context.Products.Where(p => p.CatId==3).Take(3);
}
<link rel="stylesheet" href="/shop/list.css">


	<section class="shop-home-list section">
		<div class="container">
			<div class="row">
				<div class="col-lg-4 col-md-6 col-12">
					<div class="row">
						<div class="col-12">
							<div class="shop-section-title">
								<h1>On sale</h1>
							</div>
						</div>
					</div>

					@foreach (var item in OnTop)
					{
						<div class="single-list">
							<div class="row">
								<div class="col-lg-6 col-md-6 col-12">
									<div class="list-image overlay">
										<img src="/storage/@item.Photo1" alt="#">
										<a asp-action="AddToCart" asp-controller="ShoppingCart" asp-route-id="@item.Id" class="buy"><i class="fa fa-shopping-bag"></i></a>
									</div>
								</div>
								<div class="col-lg-6 col-md-6 col-12 no-padding">
									<div class="content">
										<h4 class="title"><a asp-action="Details" asp-controller="Shop" asp-route-id="@item.Id">@item.Title</a></h4>
										<p class="price with-discount">@item.Price</p>
									</div>
								</div>
							</div>
						</div>
					}
				</div>
				<div class="col-lg-4 col-md-6 col-12">
					<div class="row">
						<div class="col-12">
							<div class="shop-section-title">
								<h1>Best Seller</h1>
							</div>
						</div>
					</div>
					<!-- Start Single List  -->
					@foreach (var item in BestSeller)
					{
						<div class="single-list">
							<div class="row">
								<div class="col-lg-6 col-md-6 col-12">
									<div class="list-image overlay">
										<img src="/storage/@item.Photo1" alt="#">
										<a asp-action="AddToCart" asp-controller="ShoppingCart" asp-route-id="@item.Id" class="buy"><i class="fa fa-shopping-bag"></i></a>
									</div>
								</div>
								<div class="col-lg-6 col-md-6 col-12 no-padding">
									<div class="content">
										<h4 class="title"><a asp-action="Details" asp-controller="Shop" asp-route-id="@item.Id">@item.Title</a></h4>
										<p class="price with-discount">@item.Price</p>
									</div>
								</div>
							</div>
						</div>
					}
				</div>
				<div class="col-lg-4 col-md-6 col-12">
					<div class="row">
						<div class="col-12">
							<div class="shop-section-title">
								<h1>Top viewed</h1>
							</div>
						</div>
					</div>
					<!-- Start Single List  -->
					@foreach (var item in TopReview)
					{
						<div class="single-list">
							<div class="row">
								<div class="col-lg-6 col-md-6 col-12">
									<div class="list-image overlay">
										<img src="/storage/@item.Photo1" alt="#">
										<a asp-action="AddToCart" asp-controller="ShoppingCart" asp-route-id="@item.Id" class="buy"><i class="fa fa-shopping-bag"></i></a>
									</div>
								</div>
								<div class="col-lg-6 col-md-6 col-12 no-padding">
									<div class="content">
										<h4 class="title"><a asp-action="Details" asp-controller="Shop" asp-route-id="@item.Id">@item.Title</a></h4>
										<p class="price with-discount">@item.Price</p>
									</div>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</section>