                                        <a class="btn btn-info btn-add-to-cart" asp-action="AddToCart" asp-controller="ShoppingCart" asp-route-id="@pro[i].Id"><i class="fa fa-shopping-cart"></i></a>
                                        <a class="btn btn-outline-success btn-detail" asp-action="Details" asp-controller="Shop" asp-route-id="@pro[i].Id">Xem chi tiết</a>
                                        <h3 class="badge rounded-pill bg-danger" id="new">New</h3>
                                    </div>
                                </div>
                            </div>
                            }
                        </div>
                    </div>

