@using comestic_csharp.Areas.Identity.Data
@model IEnumerable<comestic_csharp.Models.Product>
	 
    <link rel="stylesheet" href="/shop/owl-carousel.css">
    <link rel="stylesheet" href="/shop/slicknav.min.css">
	<link rel="stylesheet" href="/shop/hot.css">
  <style>
	  .owl-carousel .owl-stage {
margin-top: -40px;
	  }
  </style>
			
	<!-- Start Most Popular -->
	<div class="product-area most-popular section">
        <div class="container">
            <div class="row">
				<div class="col-12">
					<div class="section-title">
						<h2>Hot Item</h2>
					</div>
				</div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="owl-carousel popular-slider">
						<!-- Start Single Product -->
						@foreach (var item in Model)
						{
							<div class="single-product">
							

                                <div class="card card-product mb-3">
                                    <span class="wish-icon"><i class="fa fa-heart-o"></i></span>
                                    <img class="card-img-top" src="./storage/@item.Photo1" alt="Card image cap">
                                    <div class="card-body">
                                        <h5 class="card-title product-title">@item.Title</h5>
                                        <div class="card-text product-price">
                                            @if (@item.CouponId == 1)
                                            {
                                                <span class="price">@item.Price</span>
                                            }
                                            else{
													ShopDbContext context = new ShopDbContext();
                                                    var giamGia = context.Coupons.SingleOrDefault(p => p.Id == @item.CouponId);
                                                    var delPrice = @item.Price /(1- giamGia.Value/100);

                                                    <span class="del-price">@delPrice</span>
                                                    <span class="new-price">@item.Price</span>
                                            }
                                        </div>
                                       @if(User.Identity.IsAuthenticated){
                                        	<a title="Add to cart" class="btn btn-info btn-add-to-cart" asp-action="AddToCart" asp-controller="ShoppingCart" asp-route-id="@item.Id"><i class="fa fa-shopping-cart"></i></a>
											 
										}
										else{
											<a title="Add to cart" class="btn btn-info btn-add-to-cart" id="login" asp-area="Identity" asp-page="/Account/Login"><i class="fas fa-shopping-cart"></i></a>
										}
                                        <a class="btn btn-outline-success btn-detail" asp-action="Details" asp-controller="Shop" asp-route-id="@item.Id">Xem chi tiáº¿t</a>
                                        <h3 class="badge rounded-pill bg-danger" id="hot">Hot</h3>
                                    </div>
                                </div>
                            </div>
						
						}
                    </div>
                </div>
            </div>
        </div>
    </div>


	<script src="/shop/owl-carousel.js"></script>