@section Scripts{
	<script>
		$(document).ready(function(){

			jQuery("#sort").change(function(){

				var sort = jQuery(this).children(":selected").attr("value");
				$("#sort option").removeAttr("selected");
				$("#sort > [value =" + sort + "]").attr("selected","true");

				$.ajax({

					type:"GET",
					url: "@Url.Action("SortBy")",
					dataType: "json",
					data:{
						sort : sort
					},
					success: function (result) {
						if(result.status == "success")
                          window.location.href = result.redirectUrl;
                    },
					error: function (result) {
                    	alert("error");
                	}
				});
			});

			jQuery("#show").change(function(){

				var show = jQuery(this).children(":selected").attr("value");
				$("#show option").removeAttr("selected");
				$("#show > [value =" + show + "]").attr("selected","true");

				$.ajax({

					type:"GET",
					url: "@Url.Action("Show")",
					dataType: "json",
					data:{
						show : show
					},
					success: function (result) {
						if(result.status == "success")
                          window.location.href = result.redirectUrl;
                    },
					error: function (result) {
                    	alert("error");
                	}
				});
			});			
		});		
	</script>
}
