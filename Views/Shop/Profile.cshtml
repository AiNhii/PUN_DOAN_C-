@model comestic_csharp.Areas.Identity.Data.ShopUser
@{
    Layout= "/Views/Shared/_MainLayout.cshtml";
}

<div class="pcoded-content">
    <div class="row">
        @await Html.PartialAsync("_ProfileBar")
                <div class="col col-10">
                    <div class="card">
                        <h3 class="card-header">Details</h3>
                        <div class="card-body">
                            <div class="row">
                                <div class="col col-9">
                                    <div class="row">
                                        <label class ="col-md-3">
                                        @Html.DisplayNameFor(model => model.UserName)
                                        </label>
                                        <div class = "col-md-9">
                                        @Html.DisplayFor(model => model.UserName)
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class = "col-md-3">
                                        @Html.DisplayNameFor(model => model.Fullname)
                                        </label>
                                        <div class = "col-md-9">
                                            @Html.DisplayFor(model => model.Fullname)
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class = "col-md-3">
                                            @Html.DisplayNameFor(model => model.Email)
                                        </label>
                                        <div class = "col-md-9">
                                            @Html.DisplayFor(model => model.Email)
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class = "col-md-3">
                                        @Html.DisplayNameFor(model => model.PhoneNumber)
                                        </label>
                                        <div class = "col-md-9">
                                            @Html.DisplayFor(model => model.PhoneNumber)
                                        </div>
                                    </div>
                                </div>
                                <div class="col col-3">
                                    <div class="row">
                                        <div class="col-md-8">
                                            @if(Model.Photo != null){
                                                <img src="/storage/@Model.Photo" class="content-center">
                                            }
                                            else{
                                                <img src="/storage/null.jpg" class="content-center">
                                            }
                                        </div>
                                    </div>
                                    <div class="row">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a asp-action="EditProfile" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                        </div>
                    </div>
                </div>
    </div>
</div>