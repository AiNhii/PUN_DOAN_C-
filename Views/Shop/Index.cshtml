@model IEnumerable<comestic_csharp.Models.Product>

@{
    ViewData["Title"] = "PRODUCT";
    Layout = "/Views/Shared/_MainLayout.cshtml";
}

<div class="container">
    <div class="breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="bread-inner">
                        <ul class="bread-list">
                            <li><a href="/">Home<i class="ti-arrow-right"></i></a></li>
                            <li class="active"><a href="#">All product</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <h3 class="list-product-title">ALL PRODUCT</h3>
    <div class="row">
        <div class="col-lg-3 col-md-4 col-12">
            
        </div>
        <div class="col-lg-9 col-md-8 col-12">
            <div class="product-group">
                <div class="row">
                    <div class="col-12">
                    </div>
                </div>

                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6 col-12">
                            <div class="card card-product mb-3">
                                <span class="wish-icon"><i class="fa fa-heart-o"></i></span>
                                <img class="card-img-top" src="./storage/@item.Photo1" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title product-title">@item.Title</h5>
                                    <div class="card-text product-price">
                                        <span class="del-price">@item.Price</span>
                                        <span class="new-price">80.000 vnd</span>
                                    </div>
                                    <a class="btn btn-info btn-add-to-cart"><i class="fas fa-shopping-cart"></i></a>
                                    <a class="btn btn-outline-success btn-detail" asp-action="Details" asp-controller="Shop" asp-route-id="@item.Id">Xem chi tiáº¿t</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>