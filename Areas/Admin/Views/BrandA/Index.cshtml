@model IEnumerable<comestic_csharp.Models.Brand>

@{
    ViewData["Title"] = "Index";
}

@await Html.PartialAsync("_StyleLayout")

    <section class="content">
      <div class="container-fluid">        
        <div class="row">
          <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-9">
                                <h3 class="card-header">BRAND</h3>       
                            </div>
                            <div class="col-3">
                                <p class="card-header"><a asp-action="Create" class="add"><i data-feather ="plus"></i> Add new</a></p>
                            </div>
                        </div>
                    </div>
                <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table" id="example1" >
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Title)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Slug)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Status)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model) {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Slug)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id"><i data-feather ="edit" style="color: #3EC9E6;"></i></a> 
                                            <a asp-action="Details" asp-route-id="@item.Id"><i data-feather ="eye"></i></a> 
                                            <a asp-action="Delete" asp-route-id="@item.Id"><i data-feather="trash" style="color: red;"></i></a>
                                        </td>
                                    </tr>
                                }   
                                </tbody>
                        </table>
                    </div>
                <!-- /.card-body -->
                </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>

@await Html.PartialAsync("_ScriptsLayout")