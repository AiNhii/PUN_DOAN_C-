@model IEnumerable<comestic_csharp.Models.Order>
@* @{
        Layout ="_Layout";
} *@

@await Html.PartialAsync("_StyleLayout")
<<link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>
<style>
    #new,
#delivered, #cancel, #process {
    display: block;
    text-align: center;
    width: 74px;
    position: absolute;
    font-size: 20px;
    color: white;
    border-radius: 6px !important;
    padding: 5px 10px;
    font-size: 15px;
    margin-left: -6px;
    
}
#process{
    padding: 5px 8px !important;
}
#delivered{
    width: 77px !important;
    padding: 5px 0px !important;
    margin-left: -7px !important;
}
#new {
    background-color: #ed3535 !important;
}
#process {
    background-color: #ff9c24 !important;
}
#delivered {
    background-color: #28a745 !important;
}
#cancel{
    background-color: #afaba6 !important;
}
</style>
<div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <div class="page-header-title">
                        <h5 class="m-b-10">ORDER</h5>
                    </div>
                    <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a class="pc-link" asp-action="index" asp-controller="Dashboard">Home</a></li>
                            <li class="breadcrumb-item"><a class="pc-link" asp-action="index" asp-controller="Order">Order</a></li>
                            <li class="breadcrumb-item">Index</li>
                    </ul>
                    </div>
                </div>
        </div>
</div>

<div class="pcoded-content">
    <div class="card" style="width: 100%;">
    <div class="flex-container">
        <div><h1 style="text-align: center; color: #095a3c; padding-top: 30px; padding-left: 40px">ORDER</h1>
        </div>
        <div></div>
        <div><p><a asp-action="Create" class="add"><i data-feather ="plus"></i>Add new</a></p></div> 
    </div>
    <table class="table" id="example1">
                            <thead>
                                <tr>
                                        <th>
                                                @Html.DisplayNameFor(model => model.OrderNumber)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.LastName)
                                        </th>
                                        <th >
                                            @Html.DisplayNameFor(model => model.FirstName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Status)
                                        </th>
                                        @* <th>
                                            @Html.DisplayNameFor(model => model.Address)
                                        </th> *@
                                        <th>
                                            @Html.DisplayNameFor(model => model.Phone)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TotalAmount)
                                        </th>
                                        <th></th>
                                    </tr>
                            </thead>
                            <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.OrderNumber)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LastName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FirstName)
                                            </td>
                                            <td>
                                               
                                                @if( item.Status =="new"){
                                                    <h3 class="badge rounded-pill bg-danger" id="new">New</h3>
                                                }
                                                @if( item.Status =="process"){
                                                <h3 class="badge rounded-pill bg-danger" id="process">Process</h3>
                                                }
                                                @if( item.Status =="delivered"){
                                                     <h3 class="badge rounded-pill bg-danger" id="delivered">Delivered</h3>
                                                }
                                                @if( item.Status =="cancel"){
                                                     <h3 class="badge rounded-pill bg-danger" id="cancel">Cancel</h3>
                                                }
                                            </td>
                                            @* <td>
                                                @Html.DisplayFor(modelItem => item.Address)
                                            </td> *@
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Phone)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TotalAmount)
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn  btn-info btn-sm"><i data-feather="edit"></i></a>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn  btn-success btn-sm"><i data-feather="eye"></i></a>
                                                
                                            </td>
                                        </tr>
                                    }
                            </tbody>
    </table>
    </div>
</div>

@await Html.PartialAsync("_ScriptsLayout")