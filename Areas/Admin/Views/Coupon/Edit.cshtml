@model comestic_csharp.Models.Coupon

@{

    ViewData["Title"] = "Edit";
}



<div class="page-header">

    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">
                    <h5 class="m-b-10">COUPON</h5>
                </div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a class="pc-link" asp-action="index"
                            asp-controller="Dashboard">Home</a></li>
                    <li class="breadcrumb-item"><a class="pc-link" asp-action="index" asp-controller="Coupon">Coupon</a>
                    </li>
                    <li class="breadcrumb-item">Edit Coupon</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="pcoded-content">
    <div class="card">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <h3 class="card-header">EDIT Coupon</h3>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Code" class="control-label"></label>
                        <input asp-for="Code" class="form-control" readonly/>
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Type" class="control-label"></label>
                        <input asp-for="Type" class="form-control" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Value" class="control-label"></label>
                        <input asp-for="Value" class="form-control" />
                        <span asp-validation-for="Value" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <input asp-for="Status" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsVoucher" /> @Html.DisplayNameFor(model =>
                            model.IsVoucher)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label"></label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartedAt" class="control-label"></label>
                        <input asp-for="StartedAt" class="form-control" />
                        <span asp-validation-for="StartedAt" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndedAt" class="control-label"></label>
                        <input asp-for="EndedAt" class="form-control" />
                        <span asp-validation-for="EndedAt" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>

            </form>
        </div>
    </div>
</div>
@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
