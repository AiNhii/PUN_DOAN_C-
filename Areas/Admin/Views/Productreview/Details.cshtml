@model comestic_csharp.Models.Productreview

@{
    ViewData["Title"] = "Details";
}
<div class="pcoded-content">
    <div class="card">
        <h3 class="card-header">Details</h3>
        <div class="card-body">
           <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
