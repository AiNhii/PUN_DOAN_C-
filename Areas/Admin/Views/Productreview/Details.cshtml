        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rating) <i class="fa fa-star"></i>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Review)
        </dt>
        <dd class = "col-sm-10">
