@* @{
        Layout ="_Layout";
} *@

 @model comestic_csharp.Models.Product


        <!-- [ breadcrumb ] start -->
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="page-header-title">
                            <h5 class="m-b-10">PRODUCT</h5>
                        </div>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a class="pc-link" asp-action="index" asp-controller="Dashboard">Home</a></li>
                            <li class="breadcrumb-item"><a class="pc-link" asp-action="index" asp-controller="Product">Product</a></li>
                            <li class="breadcrumb-item">Create Product</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ breadcrumb ] end -->
        <!-- [ Main Content ] start -->
    <div class="pcoded-content">
            <!-- [ form-element ] start -->
                <div class="card">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="card-header">
                            <h3><mark>Create New Product</mark></h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Title" class="control-label"></label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Slug" class="control-label"></label>
                                <input asp-for="Slug" class="form-control" />
                                <span asp-validation-for="Slug" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Summary" class="control-label"></label>
                                <input asp-for="Summary" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-file mb-3">
                                <label asp-for="Photo1" class="form-file-label"></label>
                                <input asp-for="Photo1" type="file" class="form-file-input"  required>
                            </div>
                            <div class="form-file mb-3">
                                <label asp-for="Photo2" class="form-file-label"></label>
                                <input asp-for="Photo2" type="file" class="form-file-input"  required>
                            </div>
                            <div class="form-file mb-3">
                                <label asp-for="Photo3" class="form-file-label"></label>
                                <input asp-for="Photo3" type="file" class="form-file-input"  required>
                            </div>
                            <div class="form-file mb-3">
                                <label asp-for="Photo4" class="form-file-label"></label>
                                <input asp-for="Photo4" type="file" class="form-file-input"  required>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Condition" class="control-label"></label>
                                <select asp-for="Condition" class ="form-control" asp-items="ViewBag.Condition"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Status" class="control-label"></label>
                                <select asp-for="Status" class ="form-control" asp-items="ViewBag.Status"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="CouponId" class="control-label"></label>
                                <select asp-for="CouponId" class ="form-control" asp-items="ViewBag.CouponId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="CatId" class="control-label"></label>
                                <select asp-for="CatId" class ="form-control" asp-items="ViewBag.CatId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="ChildCatId" class="control-label"></label>
                                <select asp-for="ChildCatId" class ="form-control" asp-items="ViewBag.ChildCatId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="BrandId" class="control-label"></label>
                                <select asp-for="BrandId" class ="form-control" asp-items="ViewBag.BrandId"></select>
                            </div>
                        </div>
                        <div class="card-footer">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-primary">Back to List</a>
                        </div>
                    </form>
                </div>
            <!-- [ form-element ] end -->

        <!-- [ Main Content ] end -->
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}