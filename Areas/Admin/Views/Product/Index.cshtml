@model IEnumerable<comestic_csharp.Models.Product>

<div class="pcoded-content">

    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <div class="page-header-title">
                        <h5 class="m-b-10">PRODUCT</h5>
                    </div>
                    <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a class="pc-link" asp-action="index" asp-controller="Dashboard">Home</a></li>
                            <li class="breadcrumb-item"><a class="pc-link" asp-action="index" asp-controller="Product">Product</a></li>
                            <li class="breadcrumb-item">Index</li>
                    </ul>
                    </div>
                </div>
        </div>
    </div>

    <div class="row">
        <div class="card">
            <div class="card-header">
                <div class="flex-container">
  <div><h3 style="text-align: center; color: #095a3c; padding-top: 30px; padding-left: 40px">Product</h3></div>
  <div></div>
  <div><p>
    <a asp-action="Create" class="add"><i data-feather ="plus"></i>  Add new</a>
</p></div> 
</div>
            </div>
            <div class="card-body" style="padding-top: 0px;">
                <div class="table-responsive">
                    <table class="table-hover">
                        <thead>
                            <tr class="table-warning" id="title_pro">
                                <th class="table-warning" style="color: #ffffff;">
                                        @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th class="table-warning" style="color: #ffffff;">
                                        @Html.DisplayNameFor(model => model.Summary)
                                </th>
                                <th class="table-warning" style="color: #ffffff;">
                                        @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th class="table-warning" style="color: #ffffff;">
                                        @Html.DisplayNameFor(model => model.Photo1)
                                </th>
                                <th class="table-warning" style="color: #ffffff;">
                                        @Html.DisplayNameFor(model => model.Photo2)
                                </th>
                                <th class="table-warning" style="color: #ffffff;">
                                        @Html.DisplayNameFor(model => model.Photo3)
                                </th>
                                    <th class="table-warning" style="color: #ffffff;">
                                        @Html.DisplayNameFor(model => model.Photo4)
                                    </th>
                                    <th class="table-warning" style="color: #ffffff;">
                                        @Html.DisplayNameFor(model => model.Stock)
                                    </th>
                                    <th class="table-warning" style="color: #ffffff;">
                                        @Html.DisplayNameFor(model => model.Condition)
                                    </th>
                                    <th class="table-warning" style="color: #ffffff;">
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <th class="table-warning" style="color: #ffffff;">
                                        @Html.DisplayNameFor(model => model.Price)
                                    </th>
                                    <th class="table-warning" style="color: #ffffff;">
                                        @Html.DisplayNameFor(model => model.Brand)
                                    </th>
                                    <th class="table-warning" style="color: #ffffff;">
                                        @Html.DisplayNameFor(model => model.Cat)
                                    </th>
                                    <th class="table-warning"></th>
                                </tr>
                        </thead>
                        <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Summary)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <td>
                                            <image src="/storage/@item.Photo1"></image>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Photo2)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Photo3)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Photo4)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Stock)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Condition)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Price)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Brand.Slug)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cat.Slug)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn  btn-info btn-sm"><i data-feather="edit" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit"></i></a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn  btn-success btn-sm"><i data-feather="info"></i></a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn  btn-danger btn-sm"><i data-feather="x"></i></a>
                                        </td>
                                    </tr>
                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>