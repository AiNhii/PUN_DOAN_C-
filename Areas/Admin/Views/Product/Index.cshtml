@model IEnumerable<comestic_csharp.Models.Product>
@* @{
        Layout ="_Layout";
} *@

@await Html.PartialAsync("_StyleLayout")
<link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>
<style>
    #new,
#hot, #default {
    display: block;
    text-align: center;
    width: 74px;
    position: absolute;
    font-size: 20px;
    color: white;
    border-radius: 6px !important;
    padding: 5px 10px;
    font-size: 15px;
    margin-left: -3px;
    
}

#new {
    background-color: #ed3535 !important;
}
#hot {
    background-color: #ff9c24 !important;
}
#default{
    background-color: #afaba6 !important;
}
</style>
<div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <div class="page-header-title">
                        <h5 class="m-b-10">PRODUCT</h5>
                    </div>
                    <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a class="pc-link" asp-action="index" asp-controller="Dashboard">Home</a></li>
                            <li class="breadcrumb-item"><a class="pc-link" asp-action="index" asp-controller="Product">Product</a></li>
                            <li class="breadcrumb-item">Index</li>
                    </ul>
                    </div>
                </div>
        </div>
</div>

<div class="pcoded-content">
    <div class="card" style="width: fit-content;">
    <div class="flex-container">
        <div><h1 style="text-align: center; color: #095a3c; padding-top: 30px; padding-left: 40px">PRODUCT</h1>
        </div>
        <div></div>
        <div><p><a asp-action="Create" class="add"><i data-feather ="plus"></i>Add new</a></p></div> 
    </div>
    <table class="table" id="example1">
                            <thead>
                                <tr>
                                        <th>
                                                @Html.DisplayNameFor(model => model.Title)
                                        </th>
                                        @* <th>
                                                @Html.DisplayNameFor(model => model.Summary)
                                        </th>
                                        <th>
                                                @Html.DisplayNameFor(model => model.Description)
                                        </th> *@
                                        <th>
                                                @Html.DisplayNameFor(model => model.Photo1)
                                        </th>
                                        @* <th>
                                                @Html.DisplayNameFor(model => model.Photo2)
                                        </th>
                                        <th>
                                                @Html.DisplayNameFor(model => model.Photo3)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Photo4)
                                        </th> *@
                                        @* <th>
                                            @Html.DisplayNameFor(model => model.Stock)
                                        </th> *@
                                        <th >
                                            @Html.DisplayNameFor(model => model.Condition)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Status)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Price)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Brand)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Cat)
                                        </th>
                                        <th></th>
                                    </tr>
                            </thead>
                            <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Title)
                                            </td>
                                            @* <td>
                                                @Html.DisplayFor(modelItem => item.Summary)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td> *@
                                            <td>
                                                <image src="/storage/@item.Photo1"></image>
                                            </td>
                                            @* <td>
                                                <image src="/storage/@item.Photo2"></image>
                                            </td>
                                            <td>
                                                <image src="/storage/@item.Photo3"></image>
                                            </td>
                                            <td>
                                                <image src="/storage/@item.Photo4"></image>
                                            </td> *@
                                            @* <td>
                                                @Html.DisplayFor(modelItem => item.Stock)
                                            </td> *@
                                            <td>
                                                 @if( item.Condition =="new"){
                                                    <h3 class="badge rounded-pill bg-danger" id="new">New</h3>
                                                }
                                                @if( item.Condition =="hot"){
                                                <h3 class="badge rounded-pill bg-danger" id="hot">Hot</h3>
                                                }
                                                @if( item.Condition =="default"){
                                                     <h3 class="badge rounded-pill bg-danger" id="default">Default</h3>
                                                }
                                                
                                            </td>
                                            <td>
                                               @if( item.Status =="active") {
                                              
                                                <input type="checkbox"  checked data-toggle="toggle" data-size="sm" data-on="Active" data-off="Inactive" data-onstyle="outline-success" data-offstyle="outline-danger" style="padding-left: 8px !important;">
                                           }
                                           else{
                                                <input type="checkbox"  data-toggle="toggle" data-size="sm" data-on="Active" data-off="Inactive" data-onstyle="outline-success" data-offstyle="outline-danger" style="padding-left: 8px !important;">
                                           }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Price)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Brand.Slug)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Cat.Slug)
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn  btn-info btn-sm"><i data-feather="edit"></i></a>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn  btn-success btn-sm"><i data-feather="eye"></i></a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn  btn-danger btn-sm"><i data-feather="trash"></i></a>
                                            </td>
                                        </tr>
                                    }
                            </tbody>
    </table>
    </div>
</div>

@await Html.PartialAsync("_ScriptsLayout")
