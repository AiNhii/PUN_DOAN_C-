@model IEnumerable<comestic_csharp.Models.Category>

@{
    ViewData["Title"] = "Index";
}

@await Html.PartialAsync("_StyleLayout")
<link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>

<div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <div class="page-header-title">
                        <h5 class="m-b-10">CATEGORY</h5>
                    </div>
                    <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a class="pc-link" asp-action="index" asp-controller="Dashboard">Home</a></li>
                            <li class="breadcrumb-item"><a class="pc-link" asp-action="index" asp-controller="CategoryA">Category</a></li>
                            <li class="breadcrumb-item">Index</li>
                    </ul>
                    </div>
                </div>
        </div>
</div>


<div class="pcoded-content">
    <div class="card">
    <div class="flex-container">
            <div><h1 style="text-align: center; color: #095a3c; padding-top: 30px; padding-left: 40px">Category</h1></div>
            <div></div>
            <div><p>
                <a asp-action="Create" class="add"><i data-feather ="plus"></i>  Add new</a>
            </p></div> 
            </div>
            <table class="table" id="example1">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Slug)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Summary)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Photo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsParent)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AddedByNavigation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Parent)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Slug)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Summary)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Photo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsParent)
                        </td>
                        <td>
                           @if( item.Status =="active") {
                                              
                                                <input type="checkbox"  checked data-toggle="toggle" data-size="sm" data-on="Active" data-off="Inactive" data-onstyle="outline-success" data-offstyle="outline-danger" style="padding-left: 8px !important;">
                                           }
                                           else{
                                                <input type="checkbox"  data-toggle="toggle" data-size="sm" data-on="Active" data-off="Inactive" data-onstyle="outline-success" data-offstyle="outline-danger" style="padding-left: 8px !important;">
                                           }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AddedByNavigation.Fullname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Parent.Slug)
                        </td>
                        <td>
                           <a asp-action="Edit" asp-route-id="@item.Id"><i data-feather ="edit" style="color: #3EC9E6;"></i></a> 
                           <a asp-action="Details" asp-route-id="@item.Id"><i data-feather ="eye"></i></a> 
                           <a asp-action="Delete" asp-route-id="@item.Id"><i data-feather="trash" style="color: red;"></i></a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
    </div>    
</div>

@await Html.PartialAsync("_ScriptsLayout")
